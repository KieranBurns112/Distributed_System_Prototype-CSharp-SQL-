        <Label x:Name="label_Copy" Content="Loyalty Offer:" HorizontalAlignment="Left" Margin="25,62,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.665,0.36" Height="24" Width="225"/>

    </Grid>
